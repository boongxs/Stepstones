<Application x:Class="stepstones.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:stepstones"
             xmlns:viewmodels="clr-namespace:stepstones.ViewModels"
             xmlns:views="clr-namespace:stepstones.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:ToastViewModel}">
                <views:ToastView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
