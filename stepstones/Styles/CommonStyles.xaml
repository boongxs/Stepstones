<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="QuadrantIconButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Image x:Name="DefaultIcon"
                               Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                               Width="70"
                               Height="70">
                        </Image>

                        <Image x:Name="HoverIcon"
                               Source="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                               Width="70"
                               Height="70"
                               Visibility="Hidden">
                        </Image>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="DefaultIcon" Property="Visibility" Value="Hidden"/>
                            <Setter TargetName="HoverIcon" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="StackPanelButtonStyle"
           TargetType="Button">
        <Setter Property="Background" Value="#404040"/>
        <Setter Property="Foreground" Value="#f0f0f0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background" Value="#505050"/>
            </Trigger>

            <Trigger Property="IsPressed"
                     Value="True">
                <Setter Property="Background" Value="#303030"/>
            </Trigger>

            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Background" Value="#303030"/>
                <Setter Property="Foreground" Value="#666666"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>