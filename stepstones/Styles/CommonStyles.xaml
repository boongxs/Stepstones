<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="QuadrantIconButtonStyle"
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Image x:Name="DefaultIcon"
                               Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                               Width="70"
                               Height="70">
                        </Image>

                        <Image x:Name="HoverIcon"
                               Source="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                               Width="70"
                               Height="70"
                               Visibility="Hidden">
                        </Image>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="DefaultIcon" Property="Visibility" Value="Hidden"/>
                            <Setter TargetName="HoverIcon" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>