<Window x:Class="stepstones.Views.MessageBoxView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:stepstones.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:MessageBoxViewModel}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        MinWidth="350"
        MaxWidth="500"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Grid Margin="20">
        <Border Background="#282828"
                BorderBrush="#505050"
                BorderThickness="1"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#333333"
                        CornerRadius="5,5,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Height="30">
                        <TextBlock Text="{Binding Title}"
                                   Foreground="#f0f0f0"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold">
                        </TextBlock>

                        <Button Content="✕"
                                Click="CloseButton_Click"
                                HorizontalAlignment="Right"
                                Width="30"
                                Height="30"
                                Background="Transparent"
                                Foreground="Gray"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center">
                                                    </ContentPresenter>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1"
                           Text="{Binding Message}"
                           TextWrapping="Wrap"
                           Margin="20"
                           FontSize="16"
                           Foreground="#f0f0f0">
                </TextBlock>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="10">
                    <Button Content="Yes"
                            Command="{Binding YesCommand}"
                            Style="{StaticResource StackPanelButtonStyle}"
                            Visibility="{Binding IsYesNoVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="5">
                    </Button>

                    <Button Content="No"
                            Command="{Binding NoCommand}"
                            Style="{StaticResource StackPanelButtonStyle}"
                            Visibility="{Binding IsYesNoVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="5">
                    </Button>

                    <Button Content="OK"
                            Command="{Binding OkCommand}"
                            Style="{StaticResource StackPanelButtonStyle}"
                            Visibility="{Binding IsOkVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="5">
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
